Algoritmo "semnome"

Var
   numero: inteiro




Inicio
      escreva ("Digite um número(0 para parar):")
      leia (numero)
      
      enquanto numero <> 0 faca
        escreval ("Voçê digitou: ", numero)

        escreva ("Digite outro numero: ")
        leia (numero)
      fimenquanto
      
      escreva ("Programa encerrado.")

        

      
      



Fimalgoritmo